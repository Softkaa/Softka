@model Softka.Models.DTOs.UserDto
@{
    ViewData["Title"] = "Login";
}
<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form asp-controller="Login" method="post" asp-action="Index">

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        <span class="h1 fw-bold mb-0"><strong class="text-danger">SOFTKA</strong></span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account
                                    </h5>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <label class="form-label" for="Email">Email </label>
                                        <input type="email" name="Email" id="email" class="form-control form-control-lg"/>
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <label class="form-label" for="Password">Password</label>
                                        <input type="password" name="Password" id="password" class="form-control form-control-lg"/>
                                    </div>

                                      @if (TempData["Error"] != null)
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            @TempData["Error"]
                                        </div>
                                    } 

                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg btn-block"  style="width: 515px;" type="Submit">Login</button>
                                    </div>

                                    <a class="btn btn-danger btn-lg btn-block"  style="width: 515px; height: 45px;" href="@Url.Action("LoginResponse", "Login")">Login With Google</a>
                                    <a class="small text-muted" data-bs-toggle="modal" data-bs-target="#exampleModal" href="#!">Forgot password?</a>

                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account?</p>
                                    <a href="@Url.Action("Index", "UserCreate")" style="color: #393f81;">Register here</a>
     
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Recuperar Contrase침a</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
         <form id="recoveryForm" action="/Mail/Recovery" method="post">
    <div class="input-group flex-nowrap">
        <input type="email" name="email" class="form-control" placeholder="Correo electr칩nico" aria-label="Correo electr칩nico" required>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Recuperar Contrase침a</button>
    </div>
</form>
    </div>
  </div>
</div>
</section>

<script>
$(document).ready(function() {
    $("#recoveryForm").submit(function(event) {

        $("#exampleModal").modal('hide');
    });
});
</script>