@{
    ViewData["Title"] = "Home Page";
}

@section Header{
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" href="@Url.Action("Index", "Home")">Softka</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>                 
                </div>
                    <a class="btn text-dark" asp-area="" href="@Url.Action("Logout", "Login")">Logout</a>
            </div>
        </nav>
    </header>
}



<center>
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <p>Gestiona tu hoja de vida</p>
    </div>

    <a class="btn btn-dark" type="submit" href="@Url.Action("ViewToPdf", "Home")" target="_blank">View pdf in new page</a>
    <a class="btn btn-dark" type="submit" href="@Url.Action("DownloadPdf", "Home")">Download pdf</a>
    <br/>
    <br/>
    <embed src="@Url.Action("ShowPdfOnPage", "Home")" width="800", height="400" type="application/pdf">
    <br>
    

</center>


